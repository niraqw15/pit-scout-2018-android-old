<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width= "wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/teamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="25dp"
        android:paddingLeft="3dp"
        android:onClick="toggleColorCycle"
        />

    <Button
        android:id="@+id/timer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/teamTextView"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="TIMER"
        android:paddingLeft="3dp"
        android:onClick="openTimer"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SEALs Notes: climber notes, possible autos, etc."
        android:id="@+id/SEALsNotesTextView"
        android:layout_below="@+id/timer"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="3dp"
        />

    <EditText
        android:id="@+id/SEALsNotesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/SEALsNotesTextView"
        android:layout_marginTop="10dp"
        android:paddingLeft="3dp"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/SendButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SEALsNotesEditText"
        android:text="SEND"
        android:padding="10dp"
        android:onClick="sendNotes"/>


</RelativeLayout>